
@model IEnumerable<UsandoCRUD_Validaciones.Models.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"Lista de Categorias></h2>
        </div>
        <div class="col-6">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">Nueva Categoria</a>
        </div>
    </div>

    <br />

    @if (Model.Count() >0)
    {
        <table class="table table-bordered table-striped" sytle="width:100%">
            <thead>
                <tr>
                    <th>Nombre Categoria</th>
                    <th>Orden</th>
                    <th>Descripcion</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="40%">@item.NombreCategoria</th>
                        <th width="30%">@item.Orden</th>
                        <th width="20%">@item.Descripcion</th>
                        <th>
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="Categoria" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Editar</a>
                        <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Eliminar</a>
                        </div>
                        </th>
                    </tr>      
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Categoria</p>    
    }
</div>


